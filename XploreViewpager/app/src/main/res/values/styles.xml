<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="AppTheme.NoActionBar.ActionBar.Avocado" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/avocado</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="lollipop">true</item>
        <!-- <item name="android:windowBackground">@drawable/custom_background_0</item> -->
        <item name="android:background">@color/background_black_translucent_ca</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>
    </style>
    
    <style name="AppTheme.NoActionBar.ActionBar.Blue" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="lollipop">true</item>
    </style>

    <style name="DarkTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ButtonOfViewPager">
        <item name="android:background">@color/avocado</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15sp</item>
        <item name="android:layout_margin">15sp</item>
    </style>
</resources>
